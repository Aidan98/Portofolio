<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="alex.amsterdamapp.fragment.TopoQuiz">

    <RelativeLayout
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/scoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:fontFamily="casual"
            android:padding="16dp"
            android:text="Score"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:textColor="#000"
            android:id="@+id/points"
            android:layout_alignParentRight="true"
            android:textSize="20sp"
            android:fontFamily="casual"
            android:text="0"
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <ImageView
        android:scaleType="fitCenter"
        android:src="@drawable/amsterdam_nieuw_west"
        android:id="@+id/imageViewTopo"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"
        android:layout_width="330dp"
        android:layout_height="180dp" />

    <TextView
        android:id="@+id/vraag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:fontFamily="casual"
        android:padding="8dp"
        android:text="@string/text_topoquiz_question_nl"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/keuze1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:background="@color/colorPrimaryDark"
        android:padding="8dp"
        android:text="keuze 1"
        android:textColor="#fff" />

    <Button
        android:id="@+id/keuze2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:background="@color/colorPrimaryDark"
        android:padding="8dp"
        android:text="keuze 2"
        android:textColor="#fff" />


    <Button
        android:id="@+id/keuze3"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:background="@color/colorPrimaryDark"
        android:padding="8dp"
        android:text="keuze 3"
        android:textColor="#fff" />

</LinearLayout>
