<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_title_nl"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textAlignment="center"
            android:translationY="25dp"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/parool_button"
            android:layout_width="200dp"
            android:layout_height="65dp"
            android:background="@color/colorPrimaryDark"
            android:text="Het Parool"
            android:textColor="@android:color/background_light"
            android:layout_above="@+id/volkskrant_button"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="55dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/volkskrant_button"
            android:layout_width="200dp"
            android:layout_height="65dp"
            android:layout_alignStart="@+id/parool_button"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimaryDark"
            android:text="De Volkskrant"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/adam_button"
            android:layout_width="200dp"
            android:layout_height="65dp"
            android:layout_marginTop="55dp"
            android:background="@color/colorPrimaryDark"
            android:text="Gemeente Nieuw-West"
            android:textColor="@android:color/background_light"
            android:layout_below="@+id/volkskrant_button"
            android:layout_alignStart="@+id/volkskrant_button" />

    </RelativeLayout>
</LinearLayout>