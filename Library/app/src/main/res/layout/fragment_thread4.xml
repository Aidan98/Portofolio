<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/flayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">

            <android.support.v7.widget.CardView
                android:layout_width="400dp"
                android:layout_height="450dp"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="25dp"
                app:cardElevation="10dp">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:drawableRight="@drawable/ic_action_review"
                    android:text="Review"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="135dp"
                    android:layout_marginTop="45dp"
                    android:text="Crash course coding"
                    android:textSize="16dp" />

                <View
                    android:layout_width="380dp"
                    android:layout_height="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="75dp"
                    android:background="@color/colorPrimaryDark"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="110dp"
                    android:text="‘Een van de heerlijkste pennen van Nederland schrijft een van de schrijnendste boeken over de VS die ik ken. Vederlicht, diepgravend en ondraaglijk,’ belooft David van Reybrouck over Amerikanen lopen niet. Leven in het hart van de V.S., het nieuwe boek van Arjen van Veelen. ‘Voortreffelijk!’ roept Tommy Wieringa tegen me vanaf de kaft. Ik hoopte het al! Mijn verwachtingen van het nieuwe boek Arjen van Veelen, gevierd essayist en columnist en nipt verliezer van de Librisprijs 2018, zijn hooggespannen. En die maakt hij uiteindelijk zeker waar. Door Joop Hopster."
                    android:textSize="18dp" />


            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/flayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/flayout1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">

            <android.support.v7.widget.CardView
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="25dp"
                app:cardElevation="10dp">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="40dp"
                    android:text="Amazing review! Well done."
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="User08"
                    android:textSize="12dp" />


            </android.support.v7.widget.CardView>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/flayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/flayout2"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">

            <android.support.v7.widget.CardView
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="25dp"
                app:cardElevation="10dp">

                <TextView
                    android:id="@+id/post_comment4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="40dp"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Admin"
                    android:textSize="12dp" />


            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/flayout5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/flayout4"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="220dp">

            <android.support.v7.widget.CardView
                android:layout_width="400dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="25dp"
                app:cardElevation="10dp">


                <EditText
                    android:id="@+id/post4ET"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:hint="Type a message"
                    android:textSize="12dp" />

                <android.support.v7.widget.CardView
                    android:id="@+id/send4"
                    android:layout_marginTop="10dp"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="280dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="25dp">

                    <TextView
                        android:id="@+id/textView58"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Send"
                        android:textSize="16dp"
                        android:textColor="#fff"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"/>
                </android.support.v7.widget.CardView>


            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </RelativeLayout>

</ScrollView>

